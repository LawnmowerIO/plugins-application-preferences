<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
           id="com.appgiraffe.plugins.preferences"
      version="0.1.0">
    <name>ApplicationPreferences</name>
    <description>Application Preferences</description>
    <license>Copyright (c) 2013 AppGiraffe, LLC</license>
    <keywords>phonegap,preferences</keywords>


    <js-module src="www/applicationPreferences.js" name="applicationPreferences">
        <clobbers target="window.appgiraffe.plugins.applicationPreferences" />
    </js-module>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="applicationPreferences">
                <param name="android-package" value="com.appgiraffe.plugins.preferences.applicationPreferences"/>
            </feature>
        </config-file>

        <source-file src="src/android/applicationPreferences.java" target-dir="src/com/appgiraffe/plugins/preferences" />      
     </platform>          
</plugin>